// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Enum for user roles
enum UserRole {
  super_admin
  admin
  user
}

// Enum for letter status
enum LetterStatus {
  draft
  signed
  invalid
}

// Users table
model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  role          UserRole  @default(user)
  secretKeyHash String    @map("secret_key_hash")
  isActive      Boolean   @default(true) @map("is_active")
  jobTitle      String?   @map("job_title")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  letters       Letter[]
  signatures    Signature[]
  events        Event[]
  activityLogs  ActivityLog[]
  certificateClaims CertificateClaim[]

  @@map("users")
}

// Letters table
model Letter {
  id           String       @id @default(uuid())
  letterNumber String       @map("letter_number")
  letterDate   DateTime     @map("letter_date")
  subject      String
  attachment   String
  content      String?
  status       LetterStatus @default(draft)
  contentHash  String?      @map("content_hash")
  qrCodeUrl    String?      @map("qr_code_url")
  createdById  String       @map("created_by_id")
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")

  // Relations
  createdBy    User         @relation(fields: [createdById], references: [id])
  signatures   Signature[]

  @@map("letters")
}

// Signatures table
model Signature {
  id          String   @id @default(uuid())
  letterId    String   @map("letter_id")
  signerId    String   @map("signer_id")
  signerName  String   @map("signer_name")
  signedAt    DateTime @default(now()) @map("signed_at")
  contentHash String   @map("content_hash")
  metadata    Json     @default("{}")

  // Relations
  letter      Letter   @relation(fields: [letterId], references: [id], onDelete: Cascade)
  signer      User     @relation(fields: [signerId], references: [id])

  @@map("signatures")
}

// Events table
model Event {
  id             String   @id @default(uuid())
  name           String
  date           DateTime
  claimDeadline  DateTime @map("claim_deadline")
  templateUrl    String?  @map("template_url")
  templateConfig Json     @default("{}") @map("template_config")
  createdById    String   @map("created_by_id")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  // Relations
  createdBy      User     @relation(fields: [createdById], references: [id])
  claims         CertificateClaim[]

  @@map("events")
}

// Certificate Claims table
model CertificateClaim {
  id                String   @id @default(uuid())
  eventId           String   @map("event_id")
  userId            String?  @map("user_id")
  recipientName     String   @map("recipient_name")
  callSign          String?  @map("call_sign")
  certificateNumber String   @map("certificate_number")
  qrCodeUrl         String   @map("qr_code_url")
  claimedAt         DateTime @default(now()) @map("claimed_at")

  // Relations
  event             Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user              User?    @relation(fields: [userId], references: [id])

  @@map("certificate_claims")
}

// Activity Logs table
model ActivityLog {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  userName    String   @map("user_name")
  action      String
  description String
  metadata    Json     @default("{}")
  ipAddress   String?  @map("ip_address")
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  user        User     @relation(fields: [userId], references: [id])

  @@map("activity_logs")
}
